@model TableDefinitionBrowser.Models.ColumnDefinition

@{
    var title = "Create ColumnDefinition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Upsert">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (string.IsNullOrEmpty(Model.PhysicalColumnName) == false)
        {
            <input type="hidden" asp-for="PhysicalColumnName" />
            title = "Edit ColumnDefinition";
        }

        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
		<div class="col-8">
			<input type="hidden" asp-for="TableName"/>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="PhysicalColumnName"></label>
				</div>
				<div class="col-8">
					<input asp-for="PhysicalColumnName" class="form-control" />
					<span asp-validation-for="PhysicalColumnName" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="LogicalColumnName"></label>
				</div>
				<div class="col-8">
					<input asp-for="LogicalColumnName" class="form-control" />
					<span asp-validation-for="LogicalColumnName" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="DataType"></label>
				</div>
				<div class="col-8">
					<input asp-for="DataType" class="form-control" />
					<span asp-validation-for="DataType" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Size"></label>
				</div>
				<div class="col-8">
					<input asp-for="Size" class="form-control" />
					<span asp-validation-for="Size" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="IsNotNull"></label>
				</div>
				<div class="col-8">
					<input asp-for="IsNotNull" class="form-control" />
					<span asp-validation-for="IsNotNull" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Default"></label>
				</div>
				<div class="col-8">
					<input asp-for="Default" class="form-control" />
					<span asp-validation-for="Default" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Remarks"></label>
				</div>
				<div class="col-8">
					<input asp-for="Remarks" class="form-control" />
					<span asp-validation-for="Remarks" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-8 offset-4">
					@if (string.IsNullOrEmpty(Model.PhysicalColumnName) == false)
					{
						//Edit button and back to list
						<div class="row">
							<div class="col">
								<button type="submit" class="btn btn-primary form-control">Update</button>
							</div>
							<div class="col">
								<a asp-action="Index" class="btn btn-success form-control" asp-route-tableName="@Model.TableName">Back to List</a>
							</div>
						</div>
					}
					else
					{
						//Create button and back to list
						<div class="row">
							<div class="col">
								<button type="submit" class="btn btn-primary form-control">Create</button>
							</div>
							<div class="col">
								<a asp-action="Index" class="btn btn-success form-control" asp-route-tableName="@Model.TableName">Back to List</a>
							</div>
						</div>
					}
				</div>
			</div>
		</div>

    </div>

</form>