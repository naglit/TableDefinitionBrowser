@model IEnumerable<TableDefinitionBrowser.Models.TableDefinition>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
	<a asp-action="Upsert">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.PhysicalTableName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LogicalTableName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Category)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Owner)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Remarks)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreatedBy)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreatedAt)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UpdatedBy)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UpdatedAt)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.PhysicalTableName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LogicalTableName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Category)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Owner)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Remarks)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedBy)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedAt)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UpdatedBy)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UpdatedAt)
				</td>
				<td>
					<a asp-action="Upsert" asp-route-id="@item.PhysicalTableName">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.PhysicalTableName">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.PhysicalTableName">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

